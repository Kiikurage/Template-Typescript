{
  "name": "akashic",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "run-p start:*",
    "start:akashic": "akashic-sandbox .",
    "start:typescript": "tsc -w",
    "build": "rimraf ./script && tsc && akashic-cli-scan asset script",
    "update": "akashic-cli-scan asset && akashic-cli-scan globalScripts",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint --fix src/**/* --max-warnings=0",
    "lint:prettier": "prettier -w ./src/**/*",
    "export-zip": "rimraf game.zip && akashic-cli-export zip -o game.zip -s",
    "export-html": "rimraf game && akashic-cli-export html -o game",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.21.5",
    "@akashic/akashic-cli-export": "^1.8.18",
    "@akashic/akashic-cli-scan": "^0.16.18",
    "@akashic/akashic-engine": "^3.13.0",
    "@akashic/akashic-sandbox": "^0.23.4",
    "@akashic/headless-akashic": "^4.0.0",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  }
}
